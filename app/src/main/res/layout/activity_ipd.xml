<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/custom_attr_app_bg"
    tools:context="com.emt.pdgo.next.ui.mode.activity.ipd.IpdActivity">

    <include
        layout="@layout/view_head" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="@dimen/treatment_countdown_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/totalVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/pa6"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/totalVolUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/treatment_countdown_margin"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/totalVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/totalVolUnit"
                    android:textSize="@dimen/input_box_tv_text_size" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/cycleVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:layout_weight="1"
                android:background="@drawable/pa4"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/cycleVolUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/cycleVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/cycleVolUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/cycleNumRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/pa6"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/cycleNumUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/treatment_countdown_margin"
                    android:text="次"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/cycleNumTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/cycleNumUnit"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/retainTimeRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:layout_weight="1"
                android:background="@drawable/pa4"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/retainTimeUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/retainTimeTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/retainTimeUnit"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/finalRetainVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/pa6"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/finalRetainVolUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/treatment_countdown_margin"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/finalRetainVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/finalRetainVolUnit"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lastRetainVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:layout_weight="1"
                android:background="@drawable/pa4"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/lastRetainVolUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/lastRetainVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/lastRetainVolUnit"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/ultVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/pa6"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/ultVolUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/ultVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/ultVolUnit"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:background="@drawable/pa4"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_height="match_parent" >
                    <CheckBox
                        android:id="@+id/finalSupplyCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="末袋补液"
                        android:textColor="@color/white"
                        android:textSize="@dimen/input_box_tv_text_size"
                        android:theme="@style/CheckBoxTheme" />

                    <TextView
                        android:text="(通道1)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/input_box_tv_text_size"
                        android:layout_marginLeft="@dimen/treatment_countdown_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/finalSupplyRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/pa9"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/input_title_prescription_item_9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/finalSupplyUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/treatment_countdown_margin"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
                <TextView
                    android:id="@+id/finalSupplyTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/finalSupplyUnit"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/preparation_iv_info_height"
            android:visibility="gone"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/pa9"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/treatment_countdown_margin"
                android:layout_weight="1"
                android:background="@drawable/radius_bg_sel" >
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_centerVertical="true"
            layout="@layout/root_view" />
        <com.emt.pdgo.next.ui.view.StateButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/custom_main_btn_re_selfcheck_width"
            android:layout_height="@dimen/custom_main_btn_re_selfcheck_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="确定"
            android:textSize="@dimen/custom_main_btn_title_size"
            android:visibility="visible"
            app:normalBackgroundColor="#0073D6"
            app:normalStrokeColor="#003869"
            app:normalStrokeWidth="3dp"
            app:normalTextColor="@android:color/white"
            app:pressedBackgroundColor="#003869"
            app:pressedStrokeColor="#003869"
            app:pressedStrokeWidth="3dp"
            app:pressedTextColor="@android:color/white"
            app:radius="5dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>