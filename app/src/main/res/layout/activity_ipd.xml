<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/custom_attr_app_bg"
    tools:context="com.emt.pdgo.next.ui.mode.activity.ipd.IpdActivity">

    <include
        layout="@layout/head_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/totalVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/treatment_countdown_margin"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/pa1"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_1"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/totalVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/cycleVolLl"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:background="@drawable/pa2"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/input_title_prescription_item_2"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/cycleVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cycleNumLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/pa3"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_3"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/cycleNumTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_number_of_times"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/abdTimeLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/pa4"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_4"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/abdTimeTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/finalVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/pa5"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_5"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/finalVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lastVolLl"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:background="@drawable/pa6"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/input_title_prescription_item_6"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/lastVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ultVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/pa7"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_8"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/ultVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"
            android:layout_weight="1"
            android:id="@+id/firstVolLl"
            android:orientation="vertical"
            android:background="@drawable/pa8"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_7"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/firstVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.15" >
        <Button
            android:layout_width="0dp"
            android:text="IPD模式"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:id="@+id/ipdBtn"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:id="@+id/isFinalBtn"
            android:text="最末袋(通道1):已开启"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="#5f7eb2"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="保存应用"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:id="@+id/btnNext"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_btn_text_size"
            android:background="@color/colorAccent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>