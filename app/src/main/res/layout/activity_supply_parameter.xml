<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@id/custom_id_app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/head_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.85" >

    <RelativeLayout
        android:id="@+id/layout_time_interval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_bg_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="5dp"
        android:background="?attr/custom_attr_input_box_bg"
        android:paddingLeft="@dimen/input_box_item_padding_left"
        android:paddingRight="@dimen/input_box_item_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="流量测定 时间间隔"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <TextView
            android:id="@+id/tv_unit_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/unit_second"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <EditText
            android:id="@+id/et_time_interval"
            android:layout_width="@dimen/input_box_et_width_2"
            android:layout_height="@dimen/input_box_et_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/input_box_et_margin_right_2"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="60-600"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textColorHint="@color/text_default_30"
            android:textSize="@dimen/input_box_tv_text_size" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_threshold_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_bg_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="12dp"
        android:background="?attr/custom_attr_input_box_bg"
        android:paddingLeft="@dimen/input_box_item_padding_left"
        android:paddingRight="@dimen/input_box_item_padding_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="流量测定 阈值"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <TextView
            android:id="@+id/tv_unit_threshold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/unit_g"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <EditText
            android:id="@+id/et_threshold_value"
            android:layout_width="@dimen/input_box_et_width_2"
            android:layout_height="@dimen/input_box_et_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/input_box_et_margin_right_2"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="30-200"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textColorHint="@color/text_default_30"
            android:textSize="@dimen/input_box_tv_text_size" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_target_protection_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_bg_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="12dp"
        android:background="?attr/custom_attr_input_box_bg"
        android:paddingLeft="@dimen/input_box_item_padding_left"
        android:paddingRight="@dimen/input_box_item_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="补液目标保护值"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <TextView
            android:id="@+id/tv_unit_target_protection_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/unit_g"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <EditText
            android:id="@+id/et_target_protection_value"
            android:layout_width="@dimen/input_box_et_width_2"
            android:layout_height="@dimen/input_box_et_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/input_box_et_margin_right_2"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="0-500"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textColorHint="@color/text_default_30"
            android:textSize="@dimen/input_box_tv_text_size" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_min_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_bg_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="12dp"
        android:background="?attr/custom_attr_input_box_bg"
        android:paddingLeft="@dimen/input_box_item_padding_left"
        android:paddingRight="@dimen/input_box_item_padding_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="启动补液的加热袋重量最低值"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <TextView
            android:id="@+id/tv_unit_min_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/unit_g"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_box_tv_text_size" />

        <EditText
            android:id="@+id/et_min_weight"
            android:layout_width="@dimen/input_box_et_width_2"
            android:layout_height="@dimen/input_box_et_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/input_box_et_margin_right_2"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="500-10000"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textColorHint="@color/text_default_30"
            android:textSize="@dimen/input_box_tv_text_size" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>