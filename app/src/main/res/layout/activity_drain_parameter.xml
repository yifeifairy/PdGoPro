    </LinearLayout>

    <include
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navbar_btn_height"
        android:layout_marginLeft="@dimen/input_box_item_padding_left"
        layout="@layout/root_view" />
</LinearLayout>