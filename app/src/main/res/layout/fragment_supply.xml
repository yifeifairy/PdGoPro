<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:labeled_switch="http://schemas.android.com/apk/res-auto"

    android:background="@color/white"
    tools:context="com.emt.pdgo.next.ui.fragment.SupplyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/input_box_item_margin_left"
            android:orientation="vertical"
            android:padding="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="灌注最大警戒值"
                android:textStyle="bold"
                android:textSize="@dimen/navbar_btn_text_size"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="0dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1000g"
                    android:id="@+id/label_1"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="2000g"
                    android:id="@+id/label_2"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="3000g"
                    android:id="@+id/label_3"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="其他"
                    android:id="@+id/label_4"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/input_box_item_margin_left"
            android:orientation="vertical"
            android:padding="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="留腹扣除"
                android:textSize="@dimen/navbar_btn_text_size"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="0dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="关"
                    android:id="@+id/abdTv"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content" />
                <com.emt.pdgo.next.ui.widget.LabeledSwitch
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/abdSwitch"
                    android:layout_height="match_parent"
                    labeled_switch:colorBorder="#ff0089ff"
                    labeled_switch:colorOn="#ff0089ff"
                    labeled_switch:on="true"
                    labeled_switch:textOff=""
                    labeled_switch:textOn="" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/input_box_item_margin_left"
            android:orientation="vertical"
            android:padding="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="只计算循环治疗期间的超滤"
                android:textSize="@dimen/navbar_btn_text_size"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="关"
                    android:id="@+id/ultTv"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content" />
                <com.emt.pdgo.next.ui.widget.LabeledSwitch
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/ultSwitch"
                    android:layout_height="match_parent"
                    labeled_switch:colorBorder="#ff0089ff"
                    labeled_switch:colorOn="#ff0089ff"
                    labeled_switch:on="true"
                    labeled_switch:textOff=""
                    labeled_switch:textOn="" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/input_box_item_margin_left"
            android:orientation="vertical"
            android:padding="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="目标温度"
                android:textSize="@dimen/navbar_btn_text_size"
                android:textStyle="bold"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/tempLl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:text="38℃"
                    android:id="@+id/tempTv"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:text="调整"
                    android:textColor="@color/blue"
                    android:layout_marginEnd="@dimen/treatment_countdown_margin"
                    android:gravity="center_vertical|end"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>