<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/treatment_countdown_margin"
    android:layout_height="@dimen/dialog_common_btn_height">

    <ImageView
        android:id="@+id/wifiIv"
        android:layout_width="@dimen/navbar_btn_text_size"
        android:src="@drawable/wifi"

        android:layout_marginLeft="@dimen/number_board_layout_del_item_margin_top"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/netIv"
        android:layout_marginLeft="@dimen/number_board_layout_del_item_margin_top"

        android:layout_width="@dimen/navbar_btn_text_size"
        android:src="@drawable/net"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/powerIv"
        android:layout_marginLeft="@dimen/number_board_layout_del_item_margin_top"

        android:layout_width="@dimen/navbar_btn_width"
        android:scaleType="fitXY"
        android:src="@drawable/high_power"
        android:layout_height="wrap_content"
        android:contentDescription="@string/load_end" />

    <TextView
        android:id="@+id/currentPower"
        android:layout_width="wrap_content"
        android:text="20"
        android:layout_marginLeft="@dimen/number_board_layout_del_item_margin_top"
        android:textColor="@color/black"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_height="wrap_content" />

</LinearLayout>