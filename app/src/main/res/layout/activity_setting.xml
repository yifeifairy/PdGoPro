<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_id_app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <include
        layout="@layout/head_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >

    </include>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:paddingLeft="@dimen/custom_main_title_size_4"
        android:layout_above="@id/rootView"
        android:paddingRight="@dimen/custom_main_title_size_4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="0dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/env"
            android:gravity="center"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:gravity="center"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/lowVer"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:gravity="center"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="@color/black"
            />
    </LinearLayout>
</LinearLayout>
