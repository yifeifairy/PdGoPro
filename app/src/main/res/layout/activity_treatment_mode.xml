<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_id_app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    tools:context="com.emt.pdgo.next.ui.activity.TreatmentModeActivity">

    <ImageView
        android:id="@+id/iv_preparation_upper_part_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_iv_preparation_upper_part_bg_height"
        android:background="?attr/custom_attr_preparation_upper_part_bg" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/custom_logo_width"
        android:layout_height="@dimen/custom_logo_height"
        android:layout_marginLeft="@dimen/custom_icon_margin"
        android:layout_marginTop="@dimen/custom_icon_margin"
        android:background="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dialog_alarm_tv_msg_margin_left_right"
        android:layout_marginTop="@dimen/dialog_alarm_tv_msg_margin_left_right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/custom_iv_head_width_height"
            android:layout_height="@dimen/custom_iv_head_width_height"
            android:background="?attr/custom_attr_preparation_icon_head" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="?attr/custom_attr_preparation_user_text_color"
            android:textSize="@dimen/navbar_title_text_size_2" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="选择治疗模式"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_alarm_btn_text_size"
        android:layout_above="@id/modelLL"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/modelLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/dprLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/preparation_item_height"
            android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
            android:layout_weight="1"
            android:background="@drawable/gray_shape">


            <ImageView
                android:id="@+id/iv_pipeline_connect"
                android:layout_width="@dimen/preparation_iv_pipeline_connect_width"
                android:layout_height="@dimen/preparation_iv_pipeline_connect_height"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginTop="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginEnd="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginBottom="@dimen/custom_dimen_checkbox_thumb_radius"
                android:src="?attr/custom_attr_preparation_item_icon_04" />

            <ImageView
                android:id="@+id/iv_num_1"
                android:layout_width="@dimen/preparation_iv_num_3_width"
                android:layout_height="@dimen/preparation_iv_num_3_height"
                android:layout_margin="@dimen/custom_dimen_checkbox_thumb_radius"
                android:background="?attr/custom_attr_preparation_item_icon_num_01" />

            <TextView
                android:id="@+id/tv_pipeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
                android:text="DPR治疗"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_health_info_tv_value_text_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/apdLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/preparation_item_height"
            android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
            android:layout_marginEnd="@dimen/custom_dimen_checkbox_thumb_radius"
            android:layout_weight="1"
            android:background="?attr/custom_attr_preparation_item_bg">


            <ImageView
                android:id="@+id/ivNum2"
                android:layout_width="@dimen/preparation_iv_pipeline_connect_width"
                android:layout_height="@dimen/preparation_iv_pipeline_connect_height"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginTop="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginEnd="@dimen/custom_dimen_checkbox_thumb_radius"
                android:layout_marginBottom="@dimen/custom_dimen_checkbox_thumb_radius"
                android:background="?attr/custom_attr_preparation_item_icon_03" />

            <ImageView
                android:id="@+id/iv_num_2"
                android:layout_width="@dimen/preparation_iv_num_3_width"
                android:layout_height="@dimen/preparation_iv_num_3_height"
                android:layout_margin="@dimen/custom_dimen_checkbox_thumb_radius"
                android:background="?attr/custom_attr_preparation_item_icon_num_02" />

            <TextView
                android:id="@+id/tv_apd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="APD治疗"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_health_info_tv_value_text_size"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@id/settingLayout"
        android:layout_below="@id/modelLL"
        android:padding="@dimen/custom_dimen_checkbox_thumb_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:textSize="36sp"
            android:id="@+id/tvConnWifi"
            android:textColor="@color/red"
            android:text="网络未连接,请点击连接WIFI"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="36sp"
            android:id="@+id/dprTreat"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:text="直接进入DPR治疗"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="36sp"
            android:id="@+id/apdTreat"
            android:visibility="gone"
            android:layout_marginTop="@dimen/treatment_countdown_margin"
            android:textColor="@color/red"
            android:text="直接进入APD治疗"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />
    <LinearLayout
        android:id="@+id/settingLayout"
        android:layout_width="@dimen/custom_main_btn_re_selfcheck_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/treatment_countdown_margin"
        android:layout_marginTop="@dimen/treatment_countdown_margin"
        android:layout_marginEnd="@dimen/treatment_countdown_margin"
        android:layout_marginBottom="@dimen/treatment_countdown_margin"
        android:gravity="center"
        android:padding="@dimen/custom_dimen_checkbox_thumb_radius">

        <ImageView
            android:layout_width="@dimen/input_health_info_tv_value_text_size"
            android:layout_height="@dimen/input_health_info_tv_value_text_size"
            android:src="@drawable/setting_gray" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dimen_checkbox_thumb_radius"
            android:text="设置"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/input_health_info_tv_value_text_size" />
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>