<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:text="返回"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_margin="@dimen/treatment_countdown_margin"
        android:background="@drawable/back_shape"
        android:gravity="center"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:text=""
        android:textColor="?attr/custom_attr_common_text_color"
        android:textSize="@dimen/input_health_info_tv_value_text_size"
        android:gravity="center"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:text="保存"
        android:visibility="invisible"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_margin="@dimen/treatment_countdown_margin"
        android:background="@drawable/back_shape"
        android:layout_height="match_parent" />

</LinearLayout>