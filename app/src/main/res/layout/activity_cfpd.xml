<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:labeled_switch="http://schemas.android.com/apk/res-auto"
    android:background="?attr/custom_attr_app_bg"
    tools:context="com.emt.pdgo.next.ui.mode.activity.cfpd.CfpdActivity">

    <include
        android:id="@+id/main_head"
        layout="@layout/view_head" />
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:text="常规处方"-->
<!--        android:layout_marginTop="@dimen/treatment_countdown_margin"-->
<!--        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"-->
<!--        android:textColor="?attr/custom_attr_common_text_color"-->
<!--        android:textSize="@dimen/input_box_tv_text_size"-->
<!--        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="@dimen/treatment_countdown_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/preparation_iv_info_height" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/input_box_item_margin_right"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right"
                android:gravity="center_vertical"
                android:background="@drawable/pa20"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="浓度:"
                    android:textSize="@dimen/input_box_tv_text_size"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:id="@+id/radioGroup"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/gb1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="1.5%"
                        android:buttonTint="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />
                    <RadioButton

                        android:id="@+id/gb2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="2.5%"
                        android:buttonTint="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:id="@+id/gb3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="4.25%"
                        android:buttonTint="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:id="@+id/gb4"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="7.5%"
                        android:buttonTint="@color/white"
                        android:textSize="@dimen/dialog_common_btn_text_size"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />

                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/calciumRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:background="@drawable/pa12"
                android:layout_marginRight="@dimen/input_box_item_margin_right"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="钙含量："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <com.emt.pdgo.next.ui.widget.LabeledSwitch
                    android:id="@+id/calciumSwitch"
                    android:layout_width="@dimen/pre_heat_btn_skip_heat_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/input_box_tv_text_size"
                    labeled_switch:colorBorder="#ff0089ff"
                    labeled_switch:colorOn="#ff0089ff"
                    labeled_switch:on="false"
                    labeled_switch:textOff="低钙&#160;&#160;"
                    labeled_switch:textOn="&#160;&#160;高钙" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calciumVolRl"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:background="@drawable/pa12"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="治疗量:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:id="@+id/calciumVolUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/calciumVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/calciumVolUnit"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/firstPerVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/input_box_item_margin_right"
                android:layout_weight="1"
                android:background="@drawable/pa7"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="首次灌注量："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:id="@+id/firstPerVolUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/firstPerVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/firstPerVolUnit"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/continueAbdVolRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:background="@drawable/pa7"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="持续留腹量："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_ml"
                    android:id="@+id/continueAbdVolUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/continueAbdVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/continueAbdVolUnit"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/emptyingTimeRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:background="@drawable/pa5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/input_box_item_margin_right"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="腹腔排空时间："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_min"
                    android:id="@+id/emptyingTimeUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/emptyingTimeTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/emptyingTimeUnit"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/treatDurationRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:background="@drawable/pa5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="计划治疗时长："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="h"
                    android:id="@+id/treatDurationUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/treatDurationTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:text="0"
                    android:layout_toStartOf="@id/treatDurationUnit"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/continuePerRoteRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/input_box_item_margin_right"
                android:layout_weight="1"
                android:background="@drawable/pa3"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="持续灌注速率："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="ml/min"
                    android:id="@+id/continuePerRoteUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/continuePerRoteTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/continuePerRoteUnit"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/continueDrainRoteRl"
                android:layout_width="0dp"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:layout_weight="1"
                android:background="@drawable/pa3"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="持续引流速率："
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="ml/min"
                    android:id="@+id/continueDrainRoteUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/continueDrainRoteTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_toStartOf="@id/continueDrainRoteUnit"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_box_tv_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content" >

            <!--                <LinearLayout-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:orientation="vertical"-->
            <!--                    android:layout_height="wrap_content">-->

            <RelativeLayout
                android:layout_height="@dimen/preparation_iv_info_height"
                android:id="@+id/totalVolRl"
                android:layout_width="0dp"
                android:background="@drawable/pa9"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/input_box_item_margin_left"
                android:layout_weight="1"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本次治疗总量："
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/totalVolTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_toStartOf="@id/totalVolUnit"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="ml"
                    android:id="@+id/totalVolUnit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

            </RelativeLayout>

            <!--                </LinearLayout>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:id="@+id/limitTempRl"
                android:background="@drawable/pa9"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_box_item_margin_left"
                android:paddingLeft="@dimen/input_box_item_padding_left"
                android:paddingRight="@dimen/input_box_item_padding_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下限温度："
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/limitTempTv"
                    android:layout_width="@dimen/input_box_et_width"
                    android:layout_height="@dimen/input_box_et_height"
                    android:layout_toStartOf="@id/limitTempUnit"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/input_box_tv_text_size" />

                <TextView
                    android:id="@+id/limitTempUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_degree_Celsius"
                    android:textColor="@color/white"
                    android:textSize="@dimen/input_box_tv_text_size" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navbar_btn_height"
        android:layout_centerVertical="true"
        layout="@layout/root_view" />
    <com.emt.pdgo.next.ui.view.StateButton
        android:id="@+id/btnNext"
        android:layout_width="@dimen/custom_main_btn_re_selfcheck_width"
        android:layout_height="@dimen/custom_main_btn_re_selfcheck_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/treatment_countdown_margin"
        android:layout_marginRight="@dimen/treatment_countdown_margin"
        android:layout_marginBottom="@dimen/treatment_countdown_margin"
        android:paddingLeft="@dimen/treatment_countdown_margin"
        android:paddingRight="@dimen/treatment_countdown_margin"
        android:text="确定"
        android:textSize="@dimen/custom_main_btn_title_size"
        android:visibility="visible"
        app:normalBackgroundColor="#0073D6"
        app:normalStrokeColor="#003869"
        app:normalStrokeWidth="3dp"
        app:normalTextColor="@android:color/white"
        app:pressedBackgroundColor="#003869"
        app:pressedStrokeColor="#003869"
        app:pressedStrokeWidth="3dp"
        app:pressedTextColor="@android:color/white"
        app:radius="5dp" />
    </RelativeLayout>
</LinearLayout>