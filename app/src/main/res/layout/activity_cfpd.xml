<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:labeled_switch="http://schemas.android.com/apk/res-auto"
    android:background="?attr/custom_attr_app_bg"
    tools:context="com.emt.pdgo.next.ui.mode.activity.cfpd.CfpdActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/treatment_countdown_margin"
        android:layout_weight="0.15" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="返回"
            android:background="@drawable/white_shape"
            android:textStyle="bold"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="历史数据"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:id="@+id/btnRecord"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="历史处方"
            android:id="@+id/btnRx"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="治疗参数"
            android:id="@+id/btnParam"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginLeft="@dimen/treatment_countdown_margin"
        android:layout_marginRight="@dimen/treatment_countdown_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="@dimen/treatment_countdown_margin"
                android:background="@drawable/pa6"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="腹透液浓度"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:text="1.5%"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"
                    android:textSize="@dimen/navbar_btn_text_size"
                    android:textColor="@drawable/radio_text_select"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:text="2.5%"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"

                    android:textSize="@dimen/navbar_btn_text_size"
                    android:textColor="@drawable/radio_text_select"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/radio_bg_select"
                    android:gravity="center"
                    android:text="4.25%"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"

                    android:textSize="@dimen/navbar_btn_text_size"
                    android:textColor="@drawable/radio_text_select"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/treatment_countdown_margin"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/pa1"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/treatment_countdown_margin"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="钙含量"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <com.emt.pdgo.next.ui.widget.LabeledSwitch
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/ultSwitch"
                            android:layout_height="0dp"
                            labeled_switch:colorBorder="#ff0089ff"
                            labeled_switch:colorOn="#ff0089ff"
                            labeled_switch:on="true"
                            android:textSize="@dimen/navbar_btn_text_size"
                            labeled_switch:textOff="低钙"
                            labeled_switch:textOn="高钙" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"
                    android:background="@drawable/pa1"
                    android:padding="@dimen/treatment_countdown_margin"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_centerVertical="true"
                            android:text="腹腔排空时间"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.6"
                            android:layout_height="0dp" >

                            <TextView
                                android:id="@+id/finalVolTv"
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@color/white"
                                android:textColorHint="@color/text_default_30"
                                android:textSize="@dimen/input_health_info_tv_value_text_size"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/unit_min"
                                android:textColor="@color/white"
                                android:textSize="@dimen/navbar_btn_text_size" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/pa1"
                    android:padding="@dimen/treatment_countdown_margin"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_centerVertical="true"
                            android:text="首次灌注量"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.6"
                            android:layout_height="0dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@color/white"
                                android:textColorHint="@color/text_default_30"
                                android:textSize="@dimen/input_health_info_tv_value_text_size"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/unit_min"
                                android:textColor="@color/white"
                                android:textSize="@dimen/navbar_btn_text_size" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/pa1"
                    android:padding="@dimen/treatment_countdown_margin"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_centerVertical="true"
                            android:text="计划治疗时长"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.6"
                            android:layout_height="0dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@color/white"
                                android:textColorHint="@color/text_default_30"
                                android:textSize="@dimen/input_health_info_tv_value_text_size"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="h"
                                android:textColor="@color/white"
                                android:textSize="@dimen/navbar_btn_text_size" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/pa1"
                    android:padding="@dimen/treatment_countdown_margin"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_centerVertical="true"
                            android:text="持续留腹量"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.6"
                            android:layout_height="0dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@color/white"
                                android:textColorHint="@color/text_default_30"
                                android:textSize="@dimen/input_health_info_tv_value_text_size"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/unit_ml"
                                android:textColor="@color/white"
                                android:textSize="@dimen/navbar_btn_text_size" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/pa1"
                    android:padding="@dimen/treatment_countdown_margin"
                    android:layout_marginStart="@dimen/treatment_countdown_margin"
                    android:layout_marginTop="@dimen/treatment_countdown_margin"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_centerVertical="true"
                            android:text="持续灌注速率"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.6"
                            android:layout_height="0dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@color/white"
                                android:textColorHint="@color/text_default_30"
                                android:textSize="@dimen/input_health_info_tv_value_text_size"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="ml/min"
                                android:textColor="@color/white"
                                android:textSize="@dimen/navbar_btn_text_size" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:background="@drawable/pa1"
                android:layout_marginTop="@dimen/treatment_countdown_margin"
                android:padding="@dimen/treatment_countdown_margin"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:layout_centerVertical="true"
                        android:text="持续引流速率"
                        android:textColor="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.6"
                        android:layout_height="0dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:maxLength="7"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_default_30"
                            android:textSize="@dimen/input_health_info_tv_value_text_size"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="ml/min"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:background="@drawable/pa1"
                android:padding="@dimen/treatment_countdown_margin"
                android:layout_marginTop="@dimen/treatment_countdown_margin"
                android:layout_marginStart="@dimen/treatment_countdown_margin"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:layout_centerVertical="true"
                        android:text="本次治疗量"
                        android:textColor="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.6"
                        android:layout_height="0dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"

                            android:textColor="@color/white"
                            android:textColorHint="@color/text_default_30"
                            android:textSize="@dimen/input_health_info_tv_value_text_size"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="ml"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:background="@drawable/pa1"
                android:padding="@dimen/treatment_countdown_margin"
                android:layout_marginStart="@dimen/treatment_countdown_margin"
                android:layout_marginTop="@dimen/treatment_countdown_margin"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:layout_centerVertical="true"
                        android:text="下限温度"
                        android:textColor="@color/white"
                        android:textSize="@dimen/navbar_btn_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.6"
                        android:layout_height="0dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:maxLength="7"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_default_30"
                            android:textSize="@dimen/input_health_info_tv_value_text_size"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="℃"
                            android:textColor="@color/white"
                            android:textSize="@dimen/navbar_btn_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1" >

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:layout_weight="0.4"
            android:background="@drawable/white_shape"
            android:gravity="center"
            android:text="CFPD模式"
            android:textSize="@dimen/navbar_btn_text_size" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:id="@+id/isFinalBtn"
            android:visibility="invisible"
            android:text="最末袋(通道1):已开启"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="#5f7eb2"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="长按修改处方"
            android:id="@+id/reviseBtn"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:background="@drawable/revise_shape"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="下一步"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:id="@+id/btnNext"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_btn_text_size"
            android:background="@drawable/btn_next_shape"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>