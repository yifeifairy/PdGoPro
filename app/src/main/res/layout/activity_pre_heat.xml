<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <include
        layout="@layout/head_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/treatment_countdown_margin"
            android:layout_height="match_parent" >
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/del"
                android:id="@+id/delTemp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/treatment_countdown_margin"
                android:layout_marginTop="@dimen/treatment_countdown_margin"
                android:layout_marginEnd="@dimen/treatment_countdown_margin"
                android:layout_marginBottom="@dimen/treatment_countdown_margin"
                android:layout_toLeftOf="@id/addTemp"
                android:layout_toRightOf="@id/delTemp"
                android:src="@drawable/icon_pre_heat_biaopan" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/add"
                android:id="@+id/addTemp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="当前温度"
                android:layout_above="@id/tempLl"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/pre_heat_state_text_size_1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/tempLl"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/currTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33.0"
                    android:textSize="@dimen/treatment_main_tv_cycle_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="@dimen/treatment_main_tv_cycle_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tempLl"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:text="38℃"
                    android:id="@+id/targetTemp"
                    android:background="@drawable/radius_white"
                    android:layout_above="@id/currTemp"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/pre_heat_state_text_size_1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="预设温度"
                    android:layout_above="@id/currTemp"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/custom_dimen_item_title_text_size"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="0dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/heartIv"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="平衡温度中..."
                    android:gravity="center"
                    android:id="@+id/tipView"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/navbar_btn_text_size"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/guideIv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/guide"
                android:visibility="invisible"
                android:layout_marginEnd="@dimen/treatment_countdown_margin"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/noGuideIv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_marginStart="@dimen/treatment_countdown_margin"
                android:layout_marginEnd="@dimen/treatment_countdown_margin"
                android:src="@mipmap/no_guide"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
