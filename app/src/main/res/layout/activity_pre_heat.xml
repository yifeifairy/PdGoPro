<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pre_heat_layout_btn_bottom_height"
        android:layout_above="@id/rootView"
        android:layout_marginLeft="@dimen/pre_heat_layout_center_margin_left_right"
        android:layout_marginRight="@dimen/pre_heat_layout_center_margin_left_right"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_target_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pre_heat_btn_add_subtract_width_height"
                    android:layout_marginLeft="@dimen/pre_heat_target_temperature_margin_left_right"
                    android:layout_marginRight="@dimen/pre_heat_target_temperature_margin_left_right"
                    android:layout_toRightOf="@+id/btn_subtract1"
                    android:layout_toLeftOf="@+id/btn_add1"
                    android:background="@drawable/icon_input_box"
                    android:gravity="center"
                    android:text="37.5℃"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/dialog_alarm_btn_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_target_temperature"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/preparation_iv_ipre_heat_margin_top"
                    android:text="设定温度"
                    android:textColor="?attr/custom_attr_common_text_color"
                    android:textSize="@dimen/pre_heat_target_temperature_text_size_2" />

                <com.emt.pdgo.next.ui.view.StateButton
                    android:id="@+id/btn_add1"
                    android:layout_width="@dimen/pre_heat_btn_add_subtract_width_height"
                    android:layout_height="@dimen/pre_heat_btn_add_subtract_width_height"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/pre_heat_btn_add_subtract_padding_right"
                    android:drawableRight="@drawable/icon_add"
                    android:layout_marginBottom="@dimen/treatment_main_layout_skip_margin_bottom"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/input_health_info_tv_manual_input_text_size"
                    app:normalBackgroundColor="#0089FF"
                    app:normalStrokeColor="#003869"
                    app:normalStrokeWidth="@dimen/input_treatment_info_tab_item_margin"
                    app:normalTextColor="@android:color/white"
                    app:pressedBackgroundColor="#003869"
                    app:pressedStrokeColor="#003869"
                    app:pressedStrokeWidth="@dimen/input_treatment_info_tab_item_margin"
                    app:pressedTextColor="@android:color/white"
                    app:radius="5dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.emt.pdgo.next.ui.view.StateButton
                    android:id="@+id/btn_subtract1"
                    android:layout_width="@dimen/pre_heat_btn_add_subtract_width_height"
                    android:layout_height="@dimen/pre_heat_btn_add_subtract_width_height"
                    android:drawableRight="@drawable/icon_subtract"
                    android:paddingRight="@dimen/pre_heat_btn_add_subtract_padding_right"
                    android:text=""
                    android:textSize="@dimen/pipeline_connection_layout_step_text_size_1"
                    app:normalBackgroundColor="#0089FF"
                    app:normalStrokeColor="#003869"
                    app:normalStrokeWidth="@dimen/input_treatment_info_tab_item_margin"
                    app:normalTextColor="@android:color/white"
                    app:pressedBackgroundColor="#003869"
                    app:pressedStrokeColor="#003869"
                    app:pressedStrokeWidth="@dimen/input_treatment_info_tab_item_margin"
                    app:pressedTextColor="@android:color/white"
                    app:radius="@dimen/input_treatment_info_tab_bg_margin_top"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pre_heat_right_layout_margin_left"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/custom_dimen_checkbox_thumb_radius"
                android:id="@+id/nextRinseLayout"
                android:background="@drawable/icon_pre_heat_tip_bg"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="下一步/预冲"
                    android:textStyle="bold"
                    android:textColor="@color/text_right"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/custom_dimen_checkbox_thumb_radius"
                android:id="@+id/rinseLayout"
                android:background="@drawable/icon_pre_heat_tip_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="安装引导/预冲"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/treatment_countdown_btn_text_size"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewHead"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/navbar_height">

        <include layout="@layout/view_head" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewHead"
        android:layout_above="@+id/layout_btn_bottom"
        android:layout_marginLeft="@dimen/pre_heat_layout_center_margin_left_right"
        android:layout_marginRight="@dimen/pre_heat_layout_center_margin_left_right"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pre_heat_biaopan_margin_top"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/iv_biaopan"
                android:layout_width="@dimen/pre_heat_biaopan_width"
                android:layout_height="@dimen/pre_heat_biaopan_height"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_pre_heat_biaopan" />


            <RelativeLayout
                android:id="@+id/layout_curr_temperature"
                android:layout_width="@dimen/pre_heat_biaopan_width"
                android:layout_height="@dimen/pre_heat_biaopan_height"
                android:layout_alignLeft="@+id/iv_biaopan"
                android:layout_alignTop="@+id/iv_biaopan"
                android:layout_alignRight="@+id/iv_biaopan"
                android:layout_alignBottom="@+id/iv_biaopan"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_curr_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="34.0"
                    android:textColor="#ff464a6a"
                    android:textSize="@dimen/pre_heat_curr_temperature_text_size" />

                <TextView
                    android:id="@+id/tv_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_curr_temperature"
                    android:layout_centerHorizontal="true"
                    android:text="当前温度"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/pre_heat_curr_temperature_lable_text_size" />


                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_curr_temperature"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/tv_curr_temperature"
                    android:text="@string/unit_degree_Celsius"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/pre_heat_curr_temperature_unit_text_size" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="152525252525"
                android:gravity="center"
                android:padding="@dimen/custom_dimen_checkbox_thumb_radius"
                android:textSize="25sp"
                android:visibility="gone"
                android:id="@+id/tvHeartTips"
                android:layout_below="@id/iv_biaopan"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pre_heat_right_layout_margin_left"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/pre_heat_biaopan_margin_top"
            android:layout_weight="3">

            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dialog_alarm_tv_title_margin_top"
                app:show_timeout="1000"
                app:auto_show="false"
                android:layout_above="@id/tvHeartStatus"
                android:layout_gravity="center_horizontal"
                android:id="@+id/videoView" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="@dimen/custom_dimen_checkbox_thumb_radius"
                android:textSize="26sp"
                android:layout_alignParentBottom="true"
                android:id="@+id/tvHeartStatus"
                android:text="平衡温度中..."
                android:textColor="@color/blue"
                android:layout_marginBottom="@dimen/treatment_countdown_margin"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pre_heat_right_layout_margin_left"
            android:layout_weight="3"
            android:visibility="gone"
            android:layout_marginTop="@dimen/pre_heat_biaopan_margin_top"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_state"
                android:layout_width="@dimen/pre_heat_state_bg_width"
                android:layout_height="@dimen/pre_heat_state_bg_height"
                android:layout_marginTop="@dimen/pre_heat_right_layout_margin_top"
                android:background="@drawable/icon_pre_heat_state_bg">

                <ImageView
                    android:id="@+id/iv_label"
                    android:layout_width="@dimen/pre_heat_state_width"
                    android:layout_height="@dimen/pre_heat_state_height"
                    android:background="@drawable/icon_pre_heat_state" />

                <TextView
                    android:id="@+id/tv_tips_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_label"
                    android:layout_marginLeft="@dimen/pre_heat_state_text_margin_left"
                    android:layout_marginTop="8dp"
                    android:text="腹透液放置："
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/pre_heat_state_text_size_1" />

                <ImageView
                    android:src="@drawable/alert"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_tips_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tips_title"
                    android:layout_marginLeft="@dimen/pre_heat_state_text_margin_left"
                    android:text="请在透析液托盘上放置一袋\n腹透液"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/pre_heat_state_text_size_2" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/pre_heat_tip_bg_width"
                android:layout_height="@dimen/pre_heat_tip_bg_height"
                android:layout_marginTop="@dimen/pre_heat_tip_bg_margin_top"
                android:background="@drawable/icon_pre_heat_tip_bg">

                <ImageView
                    android:id="@+id/ivTips"
                    android:layout_width="@dimen/pre_heat_tip_width"
                    android:layout_height="@dimen/pre_heat_tip_height"
                    android:background="@drawable/icon_pre_heat_tip_1" />

                <ImageView
                    android:id="@+id/ivWarning"
                    android:layout_width="@dimen/pre_heat_tip2_width_height"
                    android:layout_height="@dimen/pre_heat_tip2_width_height"
                    android:src="@drawable/heating_warning"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pre_heat_tip2_margin_right" />

                <TextView
                    android:id="@+id/tvWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pre_heat_state_text_margin_left"
                    android:text="机器开始加热，请不要触摸铝板，小心烫伤 ！！！"
                    android:textColor="#ff0064ba"
                    android:textSize="@dimen/pre_heat_state_text_size_2" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />


</RelativeLayout>
