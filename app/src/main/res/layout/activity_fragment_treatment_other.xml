<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navbar_height_2">


        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="@dimen/navbar_btn_width"
                android:layout_height="@dimen/navbar_btn_height"
                android:background="@drawable/btn_back"
                android:clickable="false" />


        </RelativeLayout>

        <com.emt.pdgo.next.ui.view.StateButton
            android:id="@+id/btnConfirm"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="@dimen/treatment_countdown_btn_width"
            android:layout_height="@dimen/treatment_countdown_btn_height"
            android:text="确定"
            android:textSize="@dimen/treatment_countdown_btn_text_size"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            app:normalBackgroundColor="#0089FF"
            app:normalStrokeColor="#003869"
            app:normalStrokeWidth="2dp"
            app:normalTextColor="@android:color/white"
            app:pressedBackgroundColor="#003869"
            app:pressedStrokeColor="#003869"
            app:pressedStrokeWidth="2dp"
            app:pressedTextColor="@android:color/white"
            app:radius="5dp" />
