        <TextView
            android:id="@+id/cycle_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="治疗中"
            android:textColor="?attr/custom_attr_common_text_color_2"
            android:textSize="@dimen/navbar_title_text_size" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_treatment_info_tab_bg_height"
        android:layout_marginLeft="@dimen/input_treatment_info_tab_bg_margin"
        android:layout_marginTop="@dimen/input_treatment_info_tab_bg_margin_top"
        android:visibility="gone"
        android:layout_marginRight="@dimen/input_treatment_info_tab_bg_margin"
        android:background="?attr/custom_attr_tab_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_item1"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_treatment_info_tab_item_height"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/input_treatment_info_tab_item_margin"
            android:background="?attr/custom_attr_tab_select"
            android:text="@string/fragment_title_treatment_prescription_data"
            android:textColor="?attr/custom_attr_tab_text_select"
            android:textSize="@dimen/input_treatment_info_tab_item_text_size" />

        <Button
            android:id="@+id/btn_item2"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_treatment_info_tab_item_height"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/input_treatment_info_tab_item_margin"
            android:layout_marginRight="@dimen/input_treatment_info_tab_item_margin"
            android:layout_gravity="center_vertical"
            android:background="?attr/custom_attr_tab_select"
            android:text="参数设置"
            android:textColor="?attr/custom_attr_tab_text_select"
            android:textSize="@dimen/input_treatment_info_tab_item_text_size" />

        <Button
            android:id="@+id/btn_item3"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_treatment_info_tab_item_height"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/input_treatment_info_tab_item_margin"
            android:background="?attr/custom_attr_tab_select"
            android:text="@string/fragment_title_treatment_detailed_status"
            android:textColor="?attr/custom_attr_tab_text_select"
            android:textSize="@dimen/input_treatment_info_tab_item_text_size" />


    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        android:layout_margin="@dimen/treatment_countdown_margin"
        app:tabBackground="?attr/custom_attr_tab_select"
        app:tabTextAppearance="@style/tabLayoutTabSize"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/text_title_default"
        android:layout_height="@dimen/tabLayoutHeight" />

    <com.emt.pdgo.next.ui.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>