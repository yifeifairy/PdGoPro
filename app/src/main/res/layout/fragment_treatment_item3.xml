            <View
                android:layout_width="@dimen/treatment_main_detailed_status_divider"
                android:layout_height="match_parent"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_abdomen_retaining_volume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="?attr/custom_attr_common_text_color"
                    android:textSize="@dimen/treatment_main_detailed_status_text_size" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补液\n保护"
                            android:textColor="?attr/custom_attr_common_text_color"
                            android:textSize="@dimen/treatment_main_historical_data_item_tv_text_size_1" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="保护"-->
<!--                            android:textColor="?attr/custom_attr_common_text_color"-->
<!--                            android:textSize="@dimen/treatment_main_detailed_status_text_size" />-->

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
