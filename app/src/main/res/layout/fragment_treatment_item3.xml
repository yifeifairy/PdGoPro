            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="下位秤初始值 ：   "
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/treatment_main_detailed_status_text_size" />

            <View
                android:layout_width="@dimen/treatment_main_detailed_status_divider"
                android:layout_height="match_parent"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_perfusion_volume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="?attr/custom_attr_common_text_color"
                    android:textSize="@dimen/treatment_main_detailed_status_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?attr/custom_attr_common_text_color"
                    android:textSize="@dimen/treatment_main_detailed_status_text_size" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/treatment_main_detailed_status_divider"
                android:layout_height="match_parent"
                android:background="@color/view_bg_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="剩余留腹时间 ：   "
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/treatment_main_detailed_status_text_size" />

            <View
                android:layout_width="@dimen/treatment_main_detailed_status_divider"
                android:layout_height="match_parent"
                android:background="@color/view_bg_color" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_abdomen_retaining_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="?attr/custom_attr_common_text_color"
                    android:textSize="@dimen/treatment_main_detailed_status_text_size" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
