<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_common_layout_width"
    android:layout_height="@dimen/dialog_common_layout_height"
    android:background="?attr/custom_attr_dialog_background">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dialog_common_layout_bottom_margin_left_right"
        android:layout_marginRight="@dimen/dialog_common_layout_bottom_margin_left_right"
        android:layout_marginBottom="@dimen/dialog_common_layout_bottom_margin_bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_left"
            android:layout_width="@dimen/dialog_common_btn_width"
            android:layout_height="@dimen/dialog_common_btn_height"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dialog_common_btn_margin"
            android:background="@drawable/dialog_btn_blue"
            android:gravity="center"
            android:text="@string/dialog_btn_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_common_btn_text_size" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="@dimen/dialog_common_btn_width"
            android:layout_height="@dimen/dialog_common_btn_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dialog_common_btn_margin"
            android:background="@drawable/dialog_btn_gray"
            android:gravity="center"
            android:text="@string/dialog_btn_cancel"
            android:textColor="@color/text_default"
            android:textSize="@dimen/dialog_common_btn_text_size"
            android:visibility="visible"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginTop="@dimen/dialog_common_layout_top_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dialog_common_tv_margin_left_right"
            android:layout_marginTop="@dimen/dialog_common_title_margin_top"
            android:layout_marginRight="@dimen/dialog_common_tv_margin_left_right"
            android:text="主标题"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/dialog_common_title_text_size"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dialog_common_tv_margin_left_right"
            android:layout_marginTop="@dimen/dialog_common_msg_margin_top"
            android:layout_marginRight="@dimen/dialog_common_tv_margin_left_right"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:text="内容内容内容内容内容内容内容内容内容内容"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/dialog_common_msg_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dialog_common_tv_margin_left_right"
            android:layout_marginRight="@dimen/dialog_common_tv_margin_left_right"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:text="您还有项目还未完成，确定提前结束治疗？"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/dialog_common_content_text_size"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />
    </RelativeLayout>
</RelativeLayout>