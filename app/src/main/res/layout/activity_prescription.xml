<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical"
    tools:context="com.emt.pdgo.next.ui.activity.PrescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/treatment_countdown_margin"
        android:layout_weight="0.15" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="处方设置"
            android:textStyle="bold"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="历史数据"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:id="@+id/btnRecord"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="历史处方"
            android:id="@+id/btnRx"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"
            android:layout_marginStart="@dimen/treatment_countdown_margin"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="治疗参数"
            android:id="@+id/btnParam"
            android:textSize="@dimen/input_health_info_tv_value_text_size"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/totalVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/treatment_countdown_margin"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_1"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/totalVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/cycleVolLl"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/input_title_prescription_item_2"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/cycleVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cycleNumLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_3"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/cycleNumTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_number_of_times"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/abdTimeLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"


            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_4"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/abdTimeTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/finalVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/treatment_countdown_margin"

            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_5"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/finalVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lastVolLl"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"

            android:layout_weight="1"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/input_title_prescription_item_6"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/lastVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/input_box_item_margin_right"
            android:layout_marginBottom="@dimen/input_box_item_margin_right"
            android:layout_marginStart="@dimen/input_box_item_margin_right"
            android:layout_marginEnd="@dimen/treatment_countdown_margin"

            android:layout_weight="1"
            android:id="@+id/firstVolLl"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_7"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/firstVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ultVolLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/input_box_item_margin_right"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gray_shape"
            android:paddingLeft="@dimen/treatment_countdown_margin"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_centerVertical="true"
                android:text="@string/input_title_prescription_item_8"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" >

                <TextView
                    android:id="@+id/ultVolTv"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_default_30"
                    android:textSize="@dimen/input_health_info_tv_value_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/unit_ml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/navbar_btn_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.15" >

        <TextView
            android:id="@+id/ipdTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:layout_weight="0.4"
            android:background="@drawable/white_shape"
            android:gravity="center"
            android:text="IPD模式"
            android:textSize="@dimen/navbar_btn_text_size" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:id="@+id/isFinalBtn"
            android:text="最末袋(通道1):已开启"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="#5f7eb2"
            android:background="@drawable/white_shape"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/settingIv"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:padding="@dimen/treatment_evaluation_margin"
            android:src="@drawable/ic_setting"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="长按修改处方"
            android:id="@+id/reviseBtn"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:textSize="@dimen/navbar_btn_text_size"
            android:textColor="@color/white"
            android:background="@drawable/revise_shape"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="下一步"
            android:layout_margin="@dimen/treatment_countdown_margin"
            android:id="@+id/btnNext"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_btn_text_size"
            android:background="@drawable/btn_next_shape"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>