                            <TextView
                                android:id="@+id/tv_curr_time"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="top"
                                android:text="00:00"
                                android:textColor="?attr/custom_attr_common_text_color"
                                android:textSize="@dimen/treatment_main_tv_curr_temperature_text_size" />
