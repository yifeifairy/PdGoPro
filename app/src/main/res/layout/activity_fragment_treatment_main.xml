                            android:layout_height="@dimen/treatment_main_iv_volume_height"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                            android:layout_marginTop="@dimen/treatment_main_iv_volume_margin_top"
                            android:background="?attr/custom_attr_treatment_icon_temperature" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                            android:layout_toRightOf="@+id/iv_temperature"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tv_curr_temperature_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
