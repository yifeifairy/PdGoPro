                                    android:text="@string/treatment_update_temperature"
                                    android:textColor="@color/blue"
                                    android:textSize="28sp"
                                    android:visibility="gone" />

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/tv_curr_temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="0.0℃"
                                android:textColor="?attr/custom_attr_common_text_color"
                                android:textSize="@dimen/custom_main_title_size_2" />
                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_curr_retain_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/treatment_main_layout_volume_item_margin"
                    android:background="?attr/custom_attr_treatment_item_time_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/iv_retain_time"
                            android:layout_width="@dimen/treatment_main_iv_volume_width"
                            android:layout_height="@dimen/treatment_main_iv_volume_height"
                            android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                            android:layout_marginTop="@dimen/treatment_main_iv_volume_margin_top"
