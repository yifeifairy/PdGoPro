                        android:textColor="?attr/custom_attr_common_text_color"
                        android:textSize="@dimen/treatment_main_tv_curr_volume_label_text_size" />

                    <TextView
                        android:id="@+id/tv_curr_retain_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                        android:layout_marginTop="@dimen/treatment_main_layout_curr_volume_unit_margin_top"
                        android:text="00:00"
                        android:textColor="?attr/custom_attr_common_text_color"
                        android:textSize="@dimen/treatment_main_tv_curr_volume_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_curr_temp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/treatment_main_layout_volume_item_margin"
                    android:background="?attr/custom_attr_treatment_item_temperature_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_temp"
                        android:layout_width="@dimen/treatment_main_iv_volume_width"
                        android:layout_height="@dimen/treatment_main_iv_volume_height"
                        android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                        android:layout_marginTop="@dimen/treatment_main_iv_volume_margin_top"
                        android:background="?attr/custom_attr_treatment_icon_temperature" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                        android:layout_marginRight="@dimen/treatment_main_iv_volume_margin_left"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/tv_curr_temp_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="温度"
                            android:textColor="?attr/custom_attr_common_text_color"
                            android:textSize="28sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_update_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="@string/treatment_update_temperature"
                            android:textColor="@color/blue"
                            android:textSize="28sp"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_curr_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/treatment_main_iv_volume_margin_left"
                        android:layout_marginTop="@dimen/treatment_main_layout_curr_volume_unit_margin_top"
                        android:text="36.5℃"
                        android:textColor="?attr/custom_attr_common_text_color"
                        android:textSize="@dimen/treatment_main_tv_curr_volume_text_size" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


