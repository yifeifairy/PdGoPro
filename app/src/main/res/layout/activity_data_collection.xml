<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/main_head"
        layout="@layout/view_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navbar_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="5dp"
        android:text="可以毎次透析都填写两次透析之间的尿量和饮水量，也可以每天统计次数，然后只填写一次这两个数据"
        android:textColor="?attr/custom_attr_common_text_color_2"
        android:textSize="@dimen/input_box_tv_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/layout_body_data_item_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginRight="@dimen/input_box_item_margin_right"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="尿量"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_ml"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item1"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_2"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_body_data_item_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginLeft="@dimen/input_box_item_margin_left"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="饮水量"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_ml"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item2"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_2"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/layout_body_data_item_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginRight="@dimen/input_box_item_margin_right"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="血糖"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_mmol_l"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item3"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_3"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_body_data_item_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginLeft="@dimen/input_box_item_margin_left"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="治疗后体重"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_kg"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item4"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_2"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/layout_body_data_item_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginRight="@dimen/input_box_item_margin_right"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="治疗后收缩压"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_mmHg"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item5"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_3"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_body_data_item_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/input_box_bg_height"
            android:layout_marginLeft="@dimen/input_box_item_margin_left"
            android:layout_weight="1"
            android:background="?attr/custom_attr_input_box_gray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_box_item_padding_left"
            android:paddingRight="@dimen/input_box_item_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="治疗后舒张压"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <TextView
                android:id="@+id/tv_unit_item_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/unit_mmHg"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/input_box_tv_text_size" />

            <EditText
                android:id="@+id/et_body_data_item6"
                android:layout_width="@dimen/input_box_et_width"
                android:layout_height="@dimen/input_box_et_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/input_box_et_margin_right_3"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请设置"
                android:text=""
                android:textColor="?attr/custom_attr_common_text_color"
                android:textColorHint="@color/text_default_30"
                android:textSize="@dimen/input_box_tv_text_size" />

        </RelativeLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_box_bg_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_input_box_bg_margin"
        android:layout_marginRight="@dimen/layout_input_box_bg_margin"
        android:layout_marginTop="13dp"
        android:background="@drawable/btn_selector_blue"
        android:text="保存"
        android:textColor="#ffffffff"
        android:textSize="@dimen/input_box_tv_text_size" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />
    </RelativeLayout>
</LinearLayout>