<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_id_app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg">


    <ImageView
        android:id="@+id/iv_preparation_upper_part_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_iv_preparation_upper_part_bg_height"
        android:background="?attr/custom_attr_preparation_upper_part_bg" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/custom_logo_width"
        android:layout_height="@dimen/custom_logo_height"
        android:layout_marginLeft="@dimen/custom_icon_margin"
        android:layout_marginTop="@dimen/custom_icon_margin"
        android:background="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/custom_iv_head_width_height"
            android:layout_height="@dimen/custom_iv_head_width_height"
            android:background="?attr/custom_attr_preparation_icon_head" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="?attr/custom_attr_preparation_user_text_color"
            android:textSize="@dimen/navbar_title_text_size_2" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/layout_info"
            android:layout_width="@dimen/preparation_item_width"
            android:layout_height="@dimen/preparation_item_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/preparation_item_margin"
            android:layout_marginTop="@dimen/preparation_item_margin"
            android:layout_marginEnd="@dimen/preparation_item_margin"
            android:layout_marginBottom="@dimen/preparation_item_margin"
            android:background="?attr/custom_attr_preparation_item_bg">


            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="@dimen/preparation_iv_info_width"
                android:layout_height="@dimen/preparation_iv_info_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/preparation_iv_info_margin_top"
                android:layout_marginRight="@dimen/preparation_iv_info_margin_right"
                android:background="?attr/custom_attr_preparation_item_icon_01" />

            <ImageView
                android:id="@+id/iv_num_1"
                android:layout_width="@dimen/preparation_iv_num_1_width"
                android:layout_height="@dimen/preparation_iv_num_1_height"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_iv_num_margin_top"
                android:background="?attr/custom_attr_preparation_item_icon_num_01" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_num_1"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top"
                android:text="完善治疗信息"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size" />

            <TextView
                android:id="@+id/tv_info_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top_sub"
                android:text="Improve treatment information"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size_sub" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_pre_heat"
            android:layout_width="@dimen/preparation_item_width"
            android:layout_height="@dimen/preparation_item_height"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/preparation_item_margin"
            android:layout_toRightOf="@+id/layout_info"
            android:background="?attr/custom_attr_preparation_item_bg">

            <ImageView
                android:id="@+id/iv_pre_heat"
                android:layout_width="@dimen/preparation_iv_pre_heat_width"
                android:layout_height="@dimen/preparation_iv_pre_heat_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/preparation_iv_ipre_heat_margin_top"
                android:layout_marginRight="@dimen/preparation_iv_pre_heat_margin_right"
                android:background="?attr/custom_attr_preparation_item_icon_02" />

            <ImageView
                android:id="@+id/iv_num_2"
                android:layout_width="@dimen/preparation_iv_num_2_width"
                android:layout_height="@dimen/preparation_iv_num_2_height"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_iv_num_margin_top"
                android:background="?attr/custom_attr_preparation_item_icon_num_02" />

            <TextView
                android:id="@+id/tv_pre_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_num_2"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top"
                android:text="预热腹透液"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size" />

            <TextView
                android:id="@+id/tv_pre_heat_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pre_heat"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top_sub"
                android:text="Preheat peritoneal dialysis fluid"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size_sub" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyout_pipeline_connect"
            android:layout_width="@dimen/preparation_item_width"
            android:layout_height="@dimen/preparation_item_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/preparation_item_margin"
            android:layout_marginTop="@dimen/preparation_item_margin"
            android:layout_marginEnd="@dimen/preparation_item_margin"
            android:layout_marginBottom="@dimen/preparation_item_margin"
            android:layout_toRightOf="@+id/layout_pre_heat"
            android:background="?attr/custom_attr_preparation_item_bg">


            <ImageView
                android:id="@+id/iv_pipeline_connect"
                android:layout_width="@dimen/preparation_iv_pipeline_connect_width"
                android:layout_height="@dimen/preparation_iv_pipeline_connect_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/preparation_iv_pipeline_connect_margin_top"
                android:layout_marginRight="@dimen/preparation_iv_pipeline_connectt_margin_right"
                android:background="?attr/custom_attr_preparation_item_icon_03" />

            <ImageView
                android:id="@+id/iv_num_3"
                android:layout_width="@dimen/preparation_iv_num_3_width"
                android:layout_height="@dimen/preparation_iv_num_3_height"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_iv_num_margin_top"
                android:background="?attr/custom_attr_preparation_item_icon_num_03" />

            <TextView
                android:id="@+id/tv_pipeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_num_3"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top"
                android:text="管路连接/预冲"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size" />

            <TextView
                android:id="@+id/tv_pipeline_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pipeline"
                android:layout_marginLeft="@dimen/preparation_iv_num_margin_left"
                android:layout_marginTop="@dimen/preparation_tv_info_margin_top_sub"
                android:text="Pipeline connection / pre flushing"
                android:textColor="?attr/custom_attr_common_text_color"
                android:textSize="@dimen/preparation_tv_info_text_size_sub" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="36sp"
        android:id="@+id/tvConnWifi"
        android:textColor="@color/red"
        android:layout_below="@id/layout_content"
        android:text="网络未连接,请点击连接WIFI"
        android:layout_marginTop="@dimen/treatment_countdown_margin"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_preparation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_content"
        android:layout_alignLeft="@+id/layout_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="准备工作"
        android:textColor="#ffffff"
        android:textSize="@dimen/preparation_title_text_size" />

    <com.emt.pdgo.next.ui.view.StateButton
        android:id="@+id/btn_operation"
        android:layout_width="@dimen/preparation_btn_operation_width"
        android:layout_height="@dimen/preparation_btn_operation_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="73dp"
        android:text="开始操作"
        android:textSize="@dimen/navbar_btn_text_size"
        android:visibility="visible"
        app:normalBackgroundColor="#0089FF"
        app:normalStrokeColor="#003869"
        app:normalStrokeWidth="2dp"
        app:normalTextColor="@android:color/white"
        app:pressedBackgroundColor="#003869"
        app:pressedStrokeColor="#003869"
        app:pressedStrokeWidth="2dp"
        app:pressedTextColor="@android:color/white"
        app:radius="5dp" />

    <com.emt.pdgo.next.ui.view.StateButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/preparation_btn_operation_width"
        android:layout_height="@dimen/preparation_btn_operation_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="73dp"
        android:text="返回"
        android:textSize="@dimen/navbar_btn_text_size"
        android:visibility="gone"
        app:normalBackgroundColor="#0089FF"
        app:normalStrokeColor="#003869"
        app:normalStrokeWidth="2dp"
        app:normalTextColor="@android:color/white"
        app:pressedBackgroundColor="#003869"
        app:pressedStrokeColor="#003869"
        app:pressedStrokeWidth="2dp"
        app:pressedTextColor="@android:color/white"
        app:radius="5dp" />

    <LinearLayout
        android:id="@+id/layout_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/custom_setting_margin"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/iv_setting_width"
            android:layout_height="@dimen/iv_setting_height"
            android:layout_gravity="center"
            android:background="?attr/custom_attr_icon_setting" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="?attr/custom_attr_common_text_color"
            android:textSize="@dimen/tv_setting_text_size" />

    </LinearLayout>


        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />

</RelativeLayout>
