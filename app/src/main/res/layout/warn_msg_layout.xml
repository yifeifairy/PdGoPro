<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:padding="@dimen/treatment_countdown_margin"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="9"
        android:id="@+id/tipTv"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_height="match_parent" />


    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/btnPause"
        android:text="暂停"
        android:background="@drawable/selector_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_marginStart="@dimen/treatment_countdown_margin"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/btnDestroy"
        android:text="结束"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/selector_blue"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_marginEnd="@dimen/treatment_countdown_margin"
        android:layout_marginStart="@dimen/treatment_countdown_margin"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/btnClear"
        android:text="X"
        android:textColor="@color/white"
        android:background="@drawable/selector_blue"
        android:textSize="@dimen/navbar_btn_text_size"
        android:layout_marginEnd="@dimen/treatment_countdown_margin"
        android:layout_marginStart="@dimen/treatment_countdown_margin"
        android:layout_height="match_parent" />

</LinearLayout>