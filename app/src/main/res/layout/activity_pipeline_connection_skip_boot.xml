<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">


    <include
        android:id="@+id/main_head"
        layout="@layout/view_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navbar_height" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_head"
        android:layout_marginLeft="@dimen/preparation_tv_margin"
        android:layout_marginTop="@dimen/preparation_tv_margin_top"
        android:layout_marginRight="@dimen/preparation_tv_margin"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/tip_pipeline_connection_skip"
        android:textColor="?attr/custom_attr_common_text_color"
        android:textSize="@dimen/preparation_tv_text_size" />


    <com.emt.pdgo.next.ui.view.StateButton
        android:id="@+id/btn_enter_prerinse"
        android:layout_width="@dimen/preparation_btn_enter_prerinse_width"
        android:layout_height="@dimen/preparation_btn_enter_prerinse_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/preparation_btn_enter_prerinse_margin_right"
        android:layout_marginBottom="@dimen/preparation_btn_enter_prerinse_margin_bottom"
        android:drawableRight="@mipmap/icon_next"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="完成，进入预冲"
        android:textSize="@dimen/preparation_btn_enter_prerinse_text_size"
        app:normalBackgroundColor="#0089FF"
        app:normalStrokeColor="#003869"
        app:normalStrokeWidth="2dp"
        app:normalTextColor="@android:color/white"
        app:pressedBackgroundColor="#003869"
        app:pressedStrokeColor="#003869"
        app:pressedStrokeWidth="2dp"
        app:pressedTextColor="@android:color/white"
        app:radius="5dp" />


        <include
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navbar_btn_height"
            android:layout_alignParentBottom="true"
            layout="@layout/root_view" />

</RelativeLayout>