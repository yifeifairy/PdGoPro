<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:endColor="@color/gray" android:startColor="@color/gray" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:endColor="@color/gray" android:startColor="@color/gray" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:endColor="#ff0089ff" android:startColor="#ff0089ff" />
        </shape>
    </item>


</selector>