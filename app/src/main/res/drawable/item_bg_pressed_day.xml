<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="6dip" />
            <solid android:color="#ff5f7eb2" />
        </shape>
    </item>
    <item android:bottom="4dip">
        <shape>

            <corners android:radius="6dip" />
            <gradient
                android:angle="360"
                android:endColor="#ffffffff"
                android:startColor="#ffeff6f9"
                android:type="linear"
                android:useLevel="true" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="6dip" />
            <stroke
                android:width="1dp"
                android:color="#ff5f7eb2" />
        </shape>
    </item>


</layer-list>
